{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": { "type": "number" },
    "plugins": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "repo": { "type": "string", "format": "uri" }
        },
        "required": ["name", "repo"]
      }
    }
  }
}
